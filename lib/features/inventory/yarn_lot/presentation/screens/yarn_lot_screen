import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';
import 'package:intl/intl.dart';
import 'package:url_launcher/url_launcher.dart';

import 'package:production_app_frontend/l10n/app_localizations.dart';
import 'package:production_app_frontend/core/widgets/responsive_layout.dart';

import 'package:production_app_frontend/features/inventory/yarn/domain/yarn_model.dart';
import 'package:production_app_frontend/features/inventory/yarn/presentation/bloc/yarn_cubit.dart';

import 'package:production_app_frontend/features/hr/employee/domain/employee_model.dart';
import 'package:production_app_frontend/features/hr/employee/presentation/bloc/employee_cubit.dart';

import '../../domain/yarn_lot_model.dart';
import '../bloc/yarn_lot_cubit.dart';

class YarnLotScreen extends StatefulWidget {
  const YarnLotScreen({super.key});

  @override
  State<YarnLotScreen> createState() => _YarnLotScreenState();
}

class _YarnLotScreenState extends State<YarnLotScreen> {
  final _searchController = TextEditingController();
  final Color _primaryColor = const Color(0xFF003366);
  final Color _accentColor = const Color(0xFF00695C);
  final Color _bgLight = const Color(0xFFF5F7FA);

  @override
  void initState() {
    super.initState();
    context.read<YarnLotCubit>().loadYarnLots();
    context.read<YarnCubit>().loadYarns();
    context.read<EmployeeCubit>().loadEmployees();
  }

  @override
  Widget build(BuildContext context) {
    final l10n = AppLocalizations.of(context)!;
    final isDesktop = ResponsiveLayout.isDesktop(context);

    return Scaffold(
      backgroundColor: _bgLight,
      body: BlocBuilder<YarnLotCubit, YarnLotState>(
        builder: (context, state) {
          return Column(
            crossAxisAlignment: CrossAxisAlignment.stretch,
            children: [
              // --- HEADER SECTION ---
              Container(
                color: Colors.white,
                padding: const EdgeInsets.symmetric(horizontal: 24, vertical: 20),
                child: Column(
                  children: [
                    Row(
                      children: [
                        Container(
                          padding: const EdgeInsets.all(10),
                          decoration: BoxDecoration(
                            color: Colors.teal.shade50,
                            borderRadius: BorderRadius.circular(10),
                          ),
                          child: Icon(Icons.inventory, color: Colors.teal.shade800, size: 24),
                        ),
                        const SizedBox(width: 16),
                        Column(
                          crossAxisAlignment: CrossAxisAlignment.start,
                          children: [
                            Text(
                              l10n.yarnLotTitle,
                              style: TextStyle(fontSize: 22, fontWeight: FontWeight.bold, color: Colors.grey.shade800),
                            ),
                            const SizedBox(height: 2),
                            Text(
                              "Inventory > Yarn Lots",
                              style: TextStyle(fontSize: 13, color: Colors.grey.shade500),
                            ),
                          ],
                        ),
                        const Spacer(),
                        if (isDesktop)
                          ElevatedButton.icon(
                            onPressed: () => _showEditDialog(context, null, l10n),
                            icon: const Icon(Icons.add, size: 18),
                            label: Text(l10n.addYarnLot.toUpperCase()),
                            style: ElevatedButton.styleFrom(
                              backgroundColor: _primaryColor,
                              foregroundColor: Colors.white,
                              padding: const EdgeInsets.symmetric(horizontal: 20, vertical: 16),
                              elevation: 2,
                              shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(8)),
                            ),
                          ),
                      ],
                    ),
                    const SizedBox(height: 24),
                    // Search Bar
                    Row(
                      children: [
                        Expanded(
                          child: Container(
                            decoration: BoxDecoration(
                              color: _bgLight,
                              borderRadius: BorderRadius.circular(8),
                              border: Border.all(color: Colors.grey.shade200),
                            ),
                            child: TextField(
                              controller: _searchController,
                              textInputAction: TextInputAction.search,
                              decoration: InputDecoration(
                                hintText: l10n.searchYarnLot,
                                hintStyle: TextStyle(color: Colors.grey.shade400, fontSize: 14),
                                prefixIcon: Icon(Icons.search, color: Colors.grey.shade500, size: 20),
                                border: InputBorder.none,
                                contentPadding: const EdgeInsets.symmetric(vertical: 14),
                                suffixIcon: IconButton(
                                  icon: const Icon(Icons.arrow_forward, color: Colors.blue),
                                  onPressed: () => context.read<YarnLotCubit>().searchYarnLots(_searchController.text),
                                ),
                              ),
                              onSubmitted: (value) => context.read<YarnLotCubit>().searchYarnLots(value),
                            ),
                          ),
                        ),
                        const SizedBox(width: 12),
                        Container(
                          padding: const EdgeInsets.all(12),
                          decoration: BoxDecoration(
                            color: Colors.white,
                            borderRadius: BorderRadius.circular(8),
                            border: Border.all(color: Colors.grey.shade300),
                          ),
                          child: const Icon(Icons.filter_list, color: Colors.grey, size: 20),
                        ),
                      ],
                    ),
                  ],
                ),
              ),
              Container(height: 1, color: Colors.grey.shade200),

              // --- CONTENT ---
              Expanded(
                child: Builder(
                  builder: (context) {
                    if (state is YarnLotLoading) {
                      return Center(child: CircularProgressIndicator(color: _primaryColor));
                    }
                    if (state is YarnLotError) {
                      return Center(child: Text("Error: ${state.message}", style: const TextStyle(color: Colors.red)));
                    }
                    if (state is YarnLotLoaded) {
                      if (state.yarnLots.isEmpty) {
                        return Center(
                          child: Column(
                            mainAxisAlignment: MainAxisAlignment.center,
                            children: [
                              Icon(Icons.inbox_outlined, size: 60, color: Colors.grey.shade300),
                              const SizedBox(height: 16),
                              Text("No yarn lots found", style: TextStyle(color: Colors.grey.shade500)),
                            ],
                          ),
                        );
                      }
                      return isDesktop
                          ? _buildDesktopTable(context, state.yarnLots, l10n)
                          : _buildMobileList(context, state.yarnLots, l10n);
                    }
                    return const SizedBox();
                  },
                ),
              ),
            ],
          );
        },
      ),
      floatingActionButton: !isDesktop
          ? FloatingActionButton(
              backgroundColor: _accentColor,
              onPressed: () => _showEditDialog(context, null, l10n),
              child: const Icon(Icons.add, color: Colors.white),
            )
          : null,
    );
  }

  // --- DESKTOP TABLE (Full Width + Added Columns) ---
  Widget _buildDesktopTable(BuildContext context, List<YarnLot> lots, AppLocalizations l10n) {
    return SingleChildScrollView(
      padding: const EdgeInsets.all(24),
      child: SizedBox(
        width: double.infinity,
        child: Card(
          elevation: 0,
          shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12), side: BorderSide(color: Colors.grey.shade200)),
          child: LayoutBuilder(
            builder: (context, constraints) {
              return SingleChildScrollView(
                scrollDirection: Axis.horizontal,
                child: ConstrainedBox(
                  constraints: BoxConstraints(minWidth: constraints.maxWidth),
                  child: DataTable(
                    headingRowColor: MaterialStateProperty.all(const Color(0xFFF9FAFB)),
                    horizontalMargin: 24,
                    columnSpacing: 30,
                    dataRowMinHeight: 70, // Tăng chiều cao để chứa 2 dòng nhân viên
                    dataRowMaxHeight: 70,
                    columns: [
                      DataColumn(label: Text(l10n.lotCode.toUpperCase(), style: _headerStyle)),
                      DataColumn(label: Text(l10n.yarnName.toUpperCase(), style: _headerStyle)),
                      DataColumn(label: Text(l10n.containerCode.toUpperCase(), style: _headerStyle)),
                      DataColumn(label: Text("${l10n.totalKg} / ${l10n.rollCount}".toUpperCase(), style: _headerStyle)),
                      DataColumn(label: Text(l10n.warehouseLoc.toUpperCase(), style: _headerStyle)),
                      const DataColumn(label: Text("PERSONNEL", style: TextStyle(color: Colors.grey, fontWeight: FontWeight.bold, fontSize: 12))),
                      DataColumn(label: Text(l10n.actions.toUpperCase(), style: _headerStyle)),
                    ],
                    rows: lots.map((item) {
                      return DataRow(
                        cells: [
                          DataCell(Container(
                            padding: const EdgeInsets.symmetric(horizontal: 8, vertical: 4),
                            decoration: BoxDecoration(color: Colors.teal.shade50, borderRadius: BorderRadius.circular(4)),
                            child: Text(item.lotCode, style: TextStyle(color: Colors.teal.shade800, fontWeight: FontWeight.bold, fontFamily: 'Monospace')),
                          )),
                          DataCell(_YarnNameBadge(yarnId: item.yarnId)),
                          DataCell(Column(
                            crossAxisAlignment: CrossAxisAlignment.start,
                            mainAxisAlignment: MainAxisAlignment.center,
                            mainAxisSize: MainAxisSize.min,
                            children: [
                              Text(item.containerCode.isEmpty ? "---" : item.containerCode, style: const TextStyle(fontWeight: FontWeight.w600)),
                              Text(item.importDate, style: TextStyle(fontSize: 11, color: Colors.grey.shade500)),
                            ],
                          )),
                          DataCell(Column(
                            crossAxisAlignment: CrossAxisAlignment.start,
                            mainAxisAlignment: MainAxisAlignment.center,
                            mainAxisSize: MainAxisSize.min,
                            children: [
                              Text("${item.totalKg} kg", style: const TextStyle(fontWeight: FontWeight.bold, fontSize: 13)),
                              Text("${item.rollCount} rolls", style: TextStyle(fontSize: 11, color: Colors.grey.shade500)),
                            ],
                          )),
                          DataCell(Text(item.warehouseLocation)),
                          DataCell(Column(
                            crossAxisAlignment: CrossAxisAlignment.start,
                            mainAxisAlignment: MainAxisAlignment.center,
                            mainAxisSize: MainAxisSize.min,
                            children: [
                              if (item.driverId != null) 
                                Row(children: [
                                  const Icon(Icons.local_shipping, size: 12, color: Colors.grey),
                                  const SizedBox(width: 4),
                                  _EmployeeNameBadge(employeeId: item.driverId!)
                                ]),
                              if (item.receiverId != null)
                                Row(children: [
                                  // [FIX] Đổi icon người nhận
                                  const Icon(Icons.person_pin_circle, size: 12, color: Colors.grey),
                                  const SizedBox(width: 4),
                                  _EmployeeNameBadge(employeeId: item.receiverId!)
                                ]),
                            ],
                          )),
                          DataCell(Row(
                            children: [
                              IconButton(icon: const Icon(Icons.edit_note, color: Colors.grey), onPressed: () => _showEditDialog(context, item, l10n)),
                              IconButton(icon: const Icon(Icons.delete_outline, color: Colors.redAccent), onPressed: () => _confirmDelete(context, item, l10n)),
                            ],
                          )),
                        ],
                      );
                    }).toList(),
                  ),
                ),
              );
            },
          ),
        ),
      ),
    );
  }

  TextStyle get _headerStyle => TextStyle(color: Colors.grey.shade600, fontWeight: FontWeight.bold, fontSize: 12, letterSpacing: 0.5);

  // --- MOBILE LIST ---
  Widget _buildMobileList(BuildContext context, List<YarnLot> lots, AppLocalizations l10n) {
    return ListView.separated(
      padding: const EdgeInsets.all(16),
      itemCount: lots.length,
      separatorBuilder: (_, __) => const SizedBox(height: 12),
      itemBuilder: (context, index) {
        final item = lots[index];
        return Container(
          decoration: BoxDecoration(
            color: Colors.white,
            borderRadius: BorderRadius.circular(12),
            border: Border.all(color: Colors.grey.shade100),
            boxShadow: [BoxShadow(color: Colors.black.withOpacity(0.03), blurRadius: 8, offset: const Offset(0, 2))],
          ),
          child: Padding(
            padding: const EdgeInsets.all(16),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Row(
                  mainAxisAlignment: MainAxisAlignment.spaceBetween,
                  children: [
                    Row(children: [
                      const Icon(Icons.qr_code, color: Colors.teal, size: 20),
                      const SizedBox(width: 8),
                      Text(item.lotCode, style: const TextStyle(fontWeight: FontWeight.bold, fontSize: 16)),
                    ]),
                    PopupMenuButton(
                      padding: EdgeInsets.zero,
                      constraints: const BoxConstraints(),
                      icon: const Icon(Icons.more_horiz, color: Colors.grey),
                      onSelected: (val) {
                        if (val == 'edit') _showEditDialog(context, item, l10n);
                        if (val == 'delete') _confirmDelete(context, item, l10n);
                      },
                      itemBuilder: (ctx) => [
                        PopupMenuItem(value: 'edit', child: Text(l10n.editYarnLot)),
                        PopupMenuItem(value: 'delete', child: Text(l10n.deleteYarnLot)),
                      ],
                    ),
                  ],
                ),
                const Divider(),
                _rowInfo(Icons.line_style, "Yarn", _YarnNameBadge(yarnId: item.yarnId)),
                _rowInfo(Icons.calendar_today, "Date", Text(item.importDate)),
                _rowInfo(Icons.scale, "Weight", Text("${item.totalKg} kg (${item.rollCount} rolls)")),
                _rowInfo(Icons.location_on, "Location", Text("${item.warehouseLocation} / ${item.containerCode}")),
                if (item.driverId != null) 
                  _rowInfo(Icons.local_shipping, "Driver", _EmployeeNameBadge(employeeId: item.driverId!)),
                if (item.receiverId != null)
                  // [FIX] Đổi icon người nhận
                  _rowInfo(Icons.person_pin_circle, "Receiver", _EmployeeNameBadge(employeeId: item.receiverId!)),
              ],
            ),
          ),
        );
      },
    );
  }

  Widget _rowInfo(IconData icon, String label, Widget content) {
    return Padding(
      padding: const EdgeInsets.symmetric(vertical: 4),
      child: Row(
        children: [
          Icon(icon, size: 14, color: Colors.grey),
          const SizedBox(width: 8),
          Text("$label: ", style: TextStyle(color: Colors.grey.shade600, fontSize: 13)),
          Expanded(child: content),
        ],
      ),
    );
  }

  // --- DIALOG ---
  void _showEditDialog(BuildContext context, YarnLot? item, AppLocalizations l10n) {
    final codeCtrl = TextEditingController(text: item?.lotCode ?? '');
    final dateCtrl = TextEditingController(text: item?.importDate ?? DateFormat('yyyy-MM-dd').format(DateTime.now()));
    final kgCtrl = TextEditingController(text: item?.totalKg.toString() ?? '0');
    final rollCtrl = TextEditingController(text: item?.rollCount.toString() ?? '0');
    final locCtrl = TextEditingController(text: item?.warehouseLocation ?? '');
    final contCtrl = TextEditingController(text: item?.containerCode ?? '');
    final noteCtrl = TextEditingController(text: item?.note ?? '');
    
    int? selectedYarnId = item?.yarnId;
    int? selectedDriverId = item?.driverId;
    int? selectedReceiverId = item?.receiverId;
    
    final formKey = GlobalKey<FormState>();

    showDialog(
      context: context,
      builder: (ctx) => AlertDialog(
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(16)),
        titlePadding: const EdgeInsets.all(24),
        contentPadding: const EdgeInsets.symmetric(horizontal: 24),
        title: Text(item == null ? l10n.addYarnLot : l10n.editYarnLot, style: TextStyle(color: _primaryColor, fontWeight: FontWeight.bold)),
        content: Form(
          key: formKey,
          child: SizedBox(
            width: 600,
            child: SingleChildScrollView(
              child: Column(
                mainAxisSize: MainAxisSize.min,
                children: [
                  Row(children: [
                    Expanded(child: TextFormField(controller: codeCtrl, decoration: _inputDeco(l10n.lotCode), validator: (v) => v!.isEmpty ? "Required" : null)),
                    const SizedBox(width: 12),
                    Expanded(child: TextFormField(
                      controller: dateCtrl, 
                      decoration: _inputDeco(l10n.importDate),
                      onTap: () async {
                        DateTime? pickedDate = await showDatePicker(context: context, initialDate: DateTime.now(), firstDate: DateTime(2000), lastDate: DateTime(2100));
                        if(pickedDate != null) dateCtrl.text = DateFormat('yyyy-MM-dd').format(pickedDate);
                      },
                    )),
                  ]),
                  const SizedBox(height: 16),
                  
                  BlocBuilder<YarnCubit, YarnState>(
                    builder: (context, state) {
                      List<Yarn> items = (state is YarnLoaded) ? state.yarns : [];
                      return DropdownButtonFormField<int>(
                        value: selectedYarnId,
                        decoration: _inputDeco(l10n.yarnName),
                        items: items.map((y) => DropdownMenuItem(value: y.id, child: Text("${y.itemCode} - ${y.name}"))).toList(),
                        onChanged: (val) => selectedYarnId = val,
                        validator: (v) => v == null ? "Required" : null,
                      );
                    },
                  ),
                  const SizedBox(height: 16),
                  Row(children: [
                    Expanded(child: TextFormField(controller: kgCtrl, decoration: _inputDeco(l10n.totalKg), keyboardType: TextInputType.number)),
                    const SizedBox(width: 12),
                    Expanded(child: TextFormField(controller: rollCtrl, decoration: _inputDeco(l10n.rollCount), keyboardType: TextInputType.number)),
                  ]),
                  const SizedBox(height: 16),
                  Row(children: [
                    Expanded(child: TextFormField(controller: locCtrl, decoration: _inputDeco(l10n.warehouseLoc))),
                    const SizedBox(width: 12),
                    Expanded(child: TextFormField(controller: contCtrl, decoration: _inputDeco(l10n.containerCode))),
                  ]),
                  const SizedBox(height: 16),
                  BlocBuilder<EmployeeCubit, EmployeeState>(
                    builder: (context, state) {
                      List<Employee> emps = (state is EmployeeLoaded) ? state.employees : [];
                      return Row(children: [
                        Expanded(child: DropdownButtonFormField<int>(
                          value: selectedDriverId,
                          decoration: _inputDeco(l10n.driver),
                          items: emps.map((e) => DropdownMenuItem(value: e.id, child: Text(e.fullName))).toList(),
                          onChanged: (val) => selectedDriverId = val,
                        )),
                        const SizedBox(width: 12),
                        Expanded(child: DropdownButtonFormField<int>(
                          value: selectedReceiverId,
                          decoration: _inputDeco(l10n.receiver),
                          items: emps.map((e) => DropdownMenuItem(value: e.id, child: Text(e.fullName))).toList(),
                          onChanged: (val) => selectedReceiverId = val,
                        )),
                      ]);
                    },
                  ),
                  const SizedBox(height: 16),
                  TextFormField(controller: noteCtrl, decoration: _inputDeco(l10n.note), maxLines: 2),
                ],
              ),
            ),
          ),
        ),
        actionsPadding: const EdgeInsets.all(24),
        actions: [
          TextButton(onPressed: () => Navigator.pop(ctx), child: Text(l10n.cancel)),
          ElevatedButton(
            onPressed: () {
              if (formKey.currentState!.validate() && selectedYarnId != null) {
                final newItem = YarnLot(
                  id: item?.id ?? 0,
                  lotCode: codeCtrl.text,
                  yarnId: selectedYarnId!,
                  importDate: dateCtrl.text,
                  totalKg: double.tryParse(kgCtrl.text) ?? 0,
                  rollCount: int.tryParse(rollCtrl.text) ?? 0,
                  warehouseLocation: locCtrl.text,
                  containerCode: contCtrl.text,
                  driverId: selectedDriverId,
                  receiverId: selectedReceiverId,
                  note: noteCtrl.text,
                );
                context.read<YarnLotCubit>().saveYarnLot(lot: newItem, isEdit: item != null);
                Navigator.pop(ctx);
              }
            },
            style: ElevatedButton.styleFrom(backgroundColor: _primaryColor, foregroundColor: Colors.white),
            child: Text(l10n.save),
          ),
        ],
      ),
    );
  }

  InputDecoration _inputDeco(String label) {
    return InputDecoration(
      labelText: label,
      border: OutlineInputBorder(borderRadius: BorderRadius.circular(8)),
      contentPadding: const EdgeInsets.symmetric(horizontal: 16, vertical: 14),
    );
  }

  void _confirmDelete(BuildContext context, YarnLot item, AppLocalizations l10n) {
    showDialog(
      context: context,
      builder: (ctx) => AlertDialog(
        title: Text(l10n.deleteYarnLot),
        content: Text(l10n.confirmDeleteYarnLot(item.lotCode)),
        actions: [
          TextButton(onPressed: () => Navigator.pop(ctx), child: Text(l10n.cancel)),
          ElevatedButton(
            onPressed: () {
              context.read<YarnLotCubit>().deleteYarnLot(item.id);
              Navigator.pop(ctx);
            },
            style: ElevatedButton.styleFrom(backgroundColor: Colors.red, foregroundColor: Colors.white),
            child: Text(l10n.deleteYarnLot),
          ),
        ],
      ),
    );
  }
}

class _YarnNameBadge extends StatelessWidget {
  final int yarnId;
  const _YarnNameBadge({required this.yarnId});

  @override
  Widget build(BuildContext context) {
    return BlocBuilder<YarnCubit, YarnState>(
      builder: (context, state) {
        String name = "---";
        if (state is YarnLoaded) {
          final y = state.yarns.where((e) => e.id == yarnId).firstOrNull;
          if (y != null) name = "${y.itemCode} - ${y.name}";
        }
        return Text(name, style: TextStyle(color: Colors.grey.shade700, fontSize: 13, fontWeight: FontWeight.bold));
      },
    );
  }
}

class _EmployeeNameBadge extends StatelessWidget {
  final int employeeId;
  const _EmployeeNameBadge({required this.employeeId});

  @override
  Widget build(BuildContext context) {
    return BlocBuilder<EmployeeCubit, EmployeeState>(
      builder: (context, state) {
        String name = "Unknown";
        if (state is EmployeeLoaded) {
          final e = state.employees.where((e) => e.id == employeeId).firstOrNull;
          if (e != null) name = e.fullName;
        }
        return Text(name, style: TextStyle(color: Colors.black87, fontSize: 12));
      },
    );
  }
}